 <synth>
  <!-- The default style -->
  <style id="defaultStyle">
    <font name="Verdana" size="19" />
    <state>
      <color value="WHITE" type="BACKGROUND" />
      <color value="BLACK" type="FOREGROUND" />
    </state>
  </style>
  
  <style id="histogramFontStyle">
    <font name="Verdana" size="14" />
    <state>
      <color value="WHITE" type="BACKGROUND" />
      <color value="BLACK" type="FOREGROUND" />
    </state>
  </style>
  
  <!-- Visualization container controller content style -->
  <style id="containerControllerHeaderStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#f0f0f0" type="BACKGROUND" />
      <color value="BLACK" type="FOREGROUND" />
    </state>
  </style>
  
  <!-- Visualization container controller content area style -->
  <style id="containerControllerContentStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="WHITE" type="BACKGROUND" />
      <color value="BLACK" type="FOREGROUND" />
    </state>
  </style>

  <!-- Visualization container controller footer style -->
  <style id="containerControllerFooterStyle">
    <opaque value="TRUE"/>
    <state>
      <color value="#f0f0f0" type="BACKGROUND" />
      <color value="BLACK" type="FOREGROUND" />
    </state>
  </style>

  <!-- The default button style -->
  <style id="defaultButton">
    <property key="Button.textShiftOffset" type="integer" value="1" />
    <insets top="10" left="10" right="10" bottom="10" />
    <font name="Verdana" size="16" style="BOLD" />
    <state>
      <imagePainter method="buttonBackground" path="/theme/button.png" sourceInsets="11 11 11 11" />
      <color value="WHITE" type="TEXT_FOREGROUND" />
    </state>
    <state value="PRESSED">
      <imagePainter method="buttonBackground" path="/theme/button_clicked.png" sourceInsets="11 11 11 11" />
    </state>
    <state value="DISABLED">
      <imagePainter method="buttonBackground" path="/theme/button_disabled.png" sourceInsets="11 11 11 11" />
    </state>
  </style>
  
  <!-- Visualization button -->
  <style id="visualizationButtonStyle">
    <font name="Verdana" size="16" style="NORMAL" />
  </style>
  
  <!-- Close button -->
  <style id="closeButtonStyle">
    <font name="Verdana" size="20" style="BOLD" />
    <!-- Override default button background image to none -->
    <state>
      <imagePainter method="buttonBackground" path="" sourceInsets="0 0 0 0" />
      <color value="#999999" type="TEXT_FOREGROUND" />
    </state>
    <state value="PRESSED">
      <imagePainter method="buttonBackground" path="" sourceInsets="0 0 0 0" />
      <color value="#777777" type="TEXT_FOREGROUND" />
    </state>
  </style>
  
  <!-- Bindings -->
  <bind style="defaultStyle" type="region" key=".*" />
  <bind style="histogramFontStyle" type="name" key="histogramFont" />
  <bind style="containerControllerHeaderStyle" type="name" key="visualizationContainerController" />
  <bind style="containerControllerContentStyle" type="name" key="visualizationContainerContent" />
  <bind style="containerControllerFooterStyle" type="name" key="visualizationContainerFooter" />
  <bind style="defaultButton" type="region" key="Button" />
  <bind style="visualizationButtonStyle" type="name" key="visualizationButton" />
  <bind style="closeButtonStyle" type="name" key="closeButton" />
 </synth>
